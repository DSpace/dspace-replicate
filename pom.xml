<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.dspace</groupId>
  <artifactId>dspace-replicate</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>dspace-replicate</name>
  <url>https://wiki.duraspace.org/display/DSPACE/ReplicationTaskSuite</url>

  
  <properties>
    <!--Force UTF-8 encoding during build on all platforms-->
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <!-- DSpace Version Information (supported version of DSpace) -->
    <dspace.version>1.7.1</dspace.version>
    <!-- DuraCloud Version Information (supported version of DuraCloud) -->
    <duracloud.version>0.8.0</duracloud.version>
  </properties>
  
  
  <build>
    <plugins>
      <!-- Initialize Maven compiler-->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <!-- Require Java 1.6 or higher -->
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <!-- HACK: Auto-install necesary DuraCloud dependencies, which are
           not yet available in Maven Central. Once they are available
           in Maven Central or DuraSpace's Maven repo, this entire 
           'maven-install-plugin' section can be removed. -->
      <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-install-plugin</artifactId>
          <executions>
            <!--Add duracloud-common.jar to local mvn repository-->
            <execution>
              <id>install-duracloud-common-jar</id>
              <phase>validate</phase>
              <goals>
                <goal>install-file</goal>
              </goals>
              <configuration>
                <file>${basedir}/lib/duracloud-common-${duracloud.version}.jar</file>
                <groupId>org.duracloud</groupId>
                <artifactId>common</artifactId>
                <version>${duracloud.version}</version>
                <packaging>jar</packaging>
                <generatePom>true</generatePom>
              </configuration>
            </execution>
            <!--Add duracloud-storeclient.jar to local mvn repository-->
            <execution>
              <id>install-duracloud-storeclient-jar</id>
              <phase>validate</phase>
              <goals>
                <goal>install-file</goal>
              </goals>
              <configuration>
                <file>${basedir}/lib/duracloud-storeclient-${duracloud.version}.jar</file>
                <groupId>org.duracloud</groupId>
                <artifactId>storeclient</artifactId>
                <version>${duracloud.version}</version>
                <packaging>jar</packaging>
                <generatePom>true</generatePom>
              </configuration>
            </execution>
            <!--Add duracloud-storageprovider.jar to local mvn repository-->
            <execution>
              <id>install-duracloud-storageprovider-jar</id>
              <phase>validate</phase>
              <goals>
                <goal>install-file</goal>
              </goals>
              <configuration>
                <file>${basedir}/lib/duracloud-storageprovider-${duracloud.version}.jar</file>
                <groupId>org.duracloud</groupId>
                <artifactId>storageprovider</artifactId>
                <version>${duracloud.version}</version>
                <packaging>jar</packaging>
                <generatePom>true</generatePom>
              </configuration>
            </execution>
          </executions>
      </plugin>
      
      <!-- Copy necessary Runtime Depenencies to /target/lib/
           during build process. (We are only including Runtime
           dependencies which are not a part of DSpace by default)-->
      <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-dependency-plugin</artifactId>
          <executions>
            <execution>
                <phase>install</phase>
                <goals>
                    <goal>copy-dependencies</goal>
                </goals>
                <configuration>
                    <!--Copy all DuraCloud dependencies to target-->
                    <!--Also copy Apache Commons Compress to target, as this 
                        is not a DSpace dependency by default-->
                    <includeGroupIds>org.duracloud,org.apache.commons</includeGroupIds>
                    <outputDirectory>${project.build.directory}/lib</outputDirectory>
                </configuration>
            </execution>
          </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
        <groupId>org.dspace</groupId>
        <artifactId>dspace-api</artifactId>
        <version>${dspace.version}</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
        <groupId>org.slf4j</groupId>
        <artifactId>slf4j-api</artifactId>
        <version>1.6.0</version>
    </dependency>
    <dependency>
        <groupId>org.slf4j</groupId>
        <artifactId>log4j-over-slf4j</artifactId>
        <version>1.6.0</version>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-compress</artifactId>
      <version>1.0</version>
    </dependency>
    <!-- DuraCloud libraries (used for replication to/from DuraCloud) -->
    <dependency>
        <groupId>org.duracloud</groupId>
        <artifactId>common</artifactId>
        <version>${duracloud.version}</version>
    </dependency>
    <dependency>
        <groupId>org.duracloud</groupId>
        <artifactId>storeclient</artifactId>
        <version>${duracloud.version}</version>
    </dependency>
    <!-- @TODO / @FIXME unclear if this dependency required -->
    <dependency>
      <groupId>org.duracloud</groupId>
      <artifactId>storageprovider</artifactId>
      <version>${duracloud.version}</version>
    </dependency>
  </dependencies>
</project>
